{
  "name": "celarius/spin-framework",
  "description": "A super lightweight PHP UI/REST Framework",
  "keywords": [
    "php7",
    "php-framework",
    "framework",
    "api",
    "rest",
    "rest-api",
    "MicroService"
  ],
  "homepage": "http://spin.celarius.com",
  "type": "framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Kim Sandell",
      "email": "sandell@celarius.com"
    }
  ],

  "require": {
    "php": "^7",
    "ext-mbstring": "*",
    "ext-openssl": "*",

    "psr/log": "^1.0",
    "psr/container": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.0",
    "psr/simple-cache": "^1.0",
    "psr/cache": "^1.0",

    "nikic/fast-route": "^1.1",
    "guzzlehttp/guzzle": "^6.3",
    "monolog/monolog": "^2",
    "firebase/php-jwt": "^5.0",
    "league/container": "^3"
  },

  "require-dev": {
  },

  "suggest": {
    "ext-apcu": "In-memory caching capabilities"
  },

  "autoload": {
    "psr-4": {
      "Spin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spin\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
