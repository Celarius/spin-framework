{
  "name": "celarius/spin-framework",
  "description": "A super lightweight PHP UI/REST Framework",
  "keywords": [
    "php7",
    "php-framework",
    "framework",
    "api",
    "rest",
    "rest-api",
    "MicroService"
  ],
  "homepage": "http://spin.celarius.com",
  "type": "framework",
  "license": "MIT",
  "authors": [
    {
      "name": "Kim Sandell",
      "email": "sandell@celarius.com"
    }
  ],

  "require_for_php8": {
    "php": "^8",
    "ext-mbstring": "*",
    "ext-openssl": "*",

    "psr/log": "^2",
    "psr/container": "^2",
    "psr/http-factory": "^1",
    "psr/http-message": "^1",
    "psr/simple-cache": "^3",
    "psr/cache": "^1",

    "nikic/fast-route": "^1",
    "guzzlehttp/guzzle": "^7.4",
    "monolog/monolog": "^3",
    "firebase/php-jwt": "^5",
    "league/container": "^3",
    "ramsey/uuid": "^4",
    "predis/predis": "^2"
  },
  "require": {
    "php": "^7|^8",
    "ext-mbstring": "*",
    "ext-openssl": "*",

    "psr/log": "^1",
    "psr/container": "^1",
    "psr/http-factory": "^1",
    "psr/http-message": "^1",
    "psr/simple-cache": "^1",
    "psr/cache": "^1",

    "nikic/fast-route": "^1",
    "guzzlehttp/guzzle": "^7.4",
    "monolog/monolog": "^2",
    "firebase/php-jwt": "^5",
    "league/container": "^3",
    "ramsey/uuid": "^4",
    "predis/predis": "^1.1"
  },

  "suggest": {
    "ext-apcu": "In-memory caching capabilities"
  },

  "autoload": {
    "psr-4": {
      "Spin\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Spin\\": "src/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
