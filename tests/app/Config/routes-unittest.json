{
  "groups": [
    {
      "name": "Unversioned-API",
      "notes": "Unversioned API endpoints",
      "prefix": "",
      "before": [],
      "routes": [
        {
          "methods": [
            "GET"
          ],
          "path": "/health",
          "handler": "\\App\\Controllers\\Rest\\HealthController"
        },
        {
          "methods": [
            "GET"
          ],
          "path": "/status",
          "handler": "\\App\\Controllers\\Rest\\StatusController"
        },
        {
          "methods": [
            "GET"
          ],
          "path": "/info",
          "handler": "\\App\\Controllers\\Rest\\InfoController"
        },
        {
          "methods": [
            "GET"
          ],
          "path": "/database/health",
          "handler": "\\App\\Controllers\\Rest\\Database\\HealthController"
        }
      ],
      "after": []
    }
  ],

  "errors": {
    "4xx": "\\App\\Controllers\\Error4xxController",
    "5xx": "\\App\\Controllers\\Error5xxController"
  }
}